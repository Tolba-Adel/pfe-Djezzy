<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Liste Utilisateurs</title>
    <link href="images/djezzy-logo.png" rel="icon" />

    <!-- Google Font: Source Sans Pro -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback"
    />
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="fontawesome-free/css/all.min.css" />
    <!-- overlayScrollbars -->
    <link
      rel="stylesheet"
      href="overlayScrollbars/css/OverlayScrollbars.min.css"
    />
    <!-- Theme style -->
    <link rel="stylesheet" href="stylesheets/adminlte.min.css" />
    <style>
      .popover-body {
        position: absolute;
        background-color: #ffffff;
        border: 1px solid #ced4da;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        padding: 1rem;
        width: 180px;
        left: 25%;
        top: 30%;
        transform: translate(-50%, -50%);
      }

      .popover-body p {
        margin-bottom: 1rem;
      }

      .inner-popover {
        text-align: center;
      }
    </style>
  </head>
  <body
    class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed"
  >
    <!-- Site wrapper -->
    <div class="wrapper">
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"
              ><i style="color: rgb(226, 6, 19)" class="fas fa-bars"></i
            ></a>
          </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
              <i
                style="color: rgb(226, 6, 19)"
                class="fas fa-expand-arrows-alt"
              ></i>
            </a>
          </li>
          <!-- <li class="nav-item">
            <a
                class="nav-link"
                data-widget="control-sidebar"
                data-slide="true"
                href="#"
                role="button"
            >
                <i style="color: rgb(226, 6, 19)" class="fas fa-th-large"></i>
            </a>
            </li> -->
        </ul>
      </nav>

      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-primary elevation-4">
        <a href="/" class="brand-link">
          <img
            src="images/djezzy-logo.png"
            alt="Djezzy Logo"
            class="brand-image"
          />
          <span style="color: rgb(226, 6, 19)" class="brand-text">Djezzy</span>
        </a>

        <div class="sidebar">
          <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
              <img src="../../images/person-circle-outline.svg" />
            </div>
            <div class="info">
              <a
                style="color: initial; transition: color 0.3s"
                onmouseover="this.style.color='rgb(226, 6, 19)'"
                onmouseout="this.style.color='initial'"
                href="/profile"
                class="d-block"
                ><%= session.user.full_name %></a
              >
            </div>
          </div>

          <!-- Sidebar Menu -->
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
              data-accordion="false"
            >
              <li class="nav-item">
                <a
                  href="/"
                  style="color: initial; transition: color 0.3s"
                  onmouseover="this.style.color='rgb(226, 6, 19)'"
                  onmouseout="this.style.color='initial'"
                  class="nav-link"
                >
                  <i class="nav-icon fas fa-chart-pie"></i>
                  <p>Dashboard</p>
                </a>
              </li>

              <li class="nav-item">
                <a
                  href="/prediction"
                  style="color: initial; transition: color 0.3s"
                  onmouseover="this.style.color='rgb(226, 6, 19)'"
                  onmouseout="this.style.color='initial'"
                  class="nav-link"
                >
                  <i class="nav-icon fas fa-book"></i>
                  <p>Prédiction d'Offres</p>
                </a>
              </li>

              <li class="nav-item">
                <a
                  href="#"
                  class="nav-link"
                  style="color: initial; transition: color 0.3s"
                  onmouseover="this.style.color='rgb(226, 6, 19)'"
                  onmouseout="this.style.color='initial'"
                >
                  <i class="nav-icon fas fa-users-cog"></i>
                  <p>
                    Gestion des utilisateurs
                    <i class="fas fa-angle-left right"></i>
                  </p>
                </a>
                <ul class="nav nav-treeview" style="margin-left: 15px">
                  <li class="nav-item">
                    <a
                      href="/register"
                      class="nav-link"
                      style="color: initial; transition: color 0.3s"
                      onmouseover="this.style.color='rgb(226, 6, 19)'"
                      onmouseout="this.style.color='initial'"
                    >
                      <i
                        class="fas fa-user-plus nav-icon"
                        style="font-size: 0.9em"
                      ></i>
                      <p>Ajouter un utilisateur</p>
                    </a>
                  </li>

                  <li class="nav-item">
                    <a
                      href="/users"
                      class="nav-link"
                      style="color: initial; transition: color 0.3s"
                      onmouseover="this.style.color='rgb(226, 6, 19)'"
                      onmouseout="this.style.color='initial'"
                    >
                      <i
                        class="fas fa-users nav-icon"
                        style="font-size: 0.9em"
                      ></i>
                      <p>Afficher les utilisateurs</p>
                    </a>
                  </li>
                </ul>
              </li>

              <li class="nav-item">
                <a
                  href="/logout"
                  style="color: initial; transition: color 0.3s"
                  onmouseover="this.style.color='rgb(226, 6, 19)'"
                  onmouseout="this.style.color='initial'"
                  class="nav-link"
                >
                  <i class="fas fa-sign-out-alt nav-icon"></i>
                  <p>Se déconncter</p>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </aside>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Liste des utilisateurs</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item">
                    <a style="color: rgb(226, 6, 19)" href="/">Home</a>
                  </li>
                  <li class="breadcrumb-item active">Utilisateurs</li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <!-- Main content -->
        <section class="content">
          <form action="/users" method="GET">
            <div
              class="input-group mb-3"
              style="max-width: 450px; margin-left: auto"
            >
              <input
                type="text"
                name="search"
                class="form-control"
                placeholder="Rechercher par Nom"
                style="border-color: rgb(226, 6, 19)"
                onfocus="this.style.boxShadow='0 0 5px rgb(226, 6, 19)'"
                onblur="this.style.boxShadow='none'"
              />
              <div class="input-group-append">
                <button
                  type="submit"
                  class="btn btn-danger"
                  style="background-color: rgb(226, 6, 19)"
                >
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>
          </form>

          <% if (users) { %>
          <div class="card card-danger">
            <div style="background-color: rgb(226, 6, 19)" class="card-header">
              <h3 class="card-title">Utilisateurs</h3>
              <div class="card-tools">
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="collapse"
                  title="Collapse"
                >
                  <i class="fas fa-minus"></i>
                </button>
                <button
                  type="button"
                  class="btn btn-tool"
                  data-card-widget="remove"
                  title="Remove"
                >
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
            <div class="card-body p-0">
              <table class="table table-striped projects">
                <thead>
                  <tr>
                    <th style="width: 1%">ID</th>
                    <th style="width: 14%">Nom et Prénom</th>
                    <th style="width: 21%">Email</th>
                    <th style="width: 16%">Poste</th>
                    <th style="width: 15%">Compte créer le</th>
                    <th style="width: 14%"></th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(function(user) { %>
                  <tr>
                    <td><%= user.id %></td>
                    <td>
                      <a><%= user.full_name %></a>
                      <br />
                      <small><%= user.role %></small>
                    </td>
                    <td><%= user.email %></td>
                    <td><%= user.poste ? user.poste : "NULL" %></td>
                    <td class="project-state">
                      <%= user.formatted_created_at %>
                    </td>
                    <td class="project-actions text-right">
                      <form method="GET" action="/users/edit/<%= user.id %>">
                        <button type="submit" class="btn btn-primary btn-sm">
                          <i class="fas fa-pencil-alt"></i>
                          Modifier
                        </button>
                      </form>
                    </td>
                    <td class="project-actions text-right">
                      <button
                        id="deleteBtn-<%= user.id %>"
                        popovertarget="deleteConfirmation-<%= user.id %>"
                        popovertargetaction="show"
                        type="button"
                        class="btn btn-danger btn-sm"
                      >
                        <i class="fas fa-trash"></i>
                        Supprimer
                      </button>
                      <div
                        id="deleteConfirmation-<%= user.id %>"
                        class="popover-body"
                        popover
                      >
                        <div class="inner-popover">
                          <p>Etes-vous sûr ?</p>
                          <form
                            method="POST"
                            action="/users/<%= user.id %>?_method=DELETE"
                          >
                            <input
                              popovertarget="deleteConfirmation-<%= user.id %>"
                              popovertargetaction="hide"
                              type="button"
                              value="Non"
                              class="btn btn-secondary btn-sm"
                            />
                            <button type="submit" class="btn btn-danger btn-sm">
                              Oui
                            </button>
                          </form>
                        </div>
                      </div>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
          <% } else { %>
          <div
            class="d-flex justify-content-center align-items-center"
            style="height: 50vh"
          >
            <div class="text-center">
              <div class="callout callout-danger">
                <i class="fas fa-user fa-3x mb-3"></i>
                <p>Aucun utilisateur trouvé avec ce nom.</p>
              </div>
            </div>
          </div>
          <% } %>
        </section>
      </div>

      <!-- <footer class="main-footer"></footer> -->

      <aside class="control-sidebar control-sidebar-dark"></aside>
    </div>

    <script>
      // Set the last visited page in localStorage
      localStorage.setItem("lastVisitedPage", window.location.href);
    </script>

    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="javascripts/adminlte.js"></script>
  </body>
</html>
