<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home Page</title>
    <link href="images/djezzy-logo.png" rel="icon" />

    <!-- Google Font: Source Sans Pro -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback"
    />
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="fontawesome-free/css/all.min.css" />
    <!-- overlayScrollbars -->
    <link
      rel="stylesheet"
      href="overlayScrollbars/css/OverlayScrollbars.min.css"
    />
    <!-- Theme style -->
    <link rel="stylesheet" href="stylesheets/adminlte.min.css" />
  </head>
  <body
    class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed"
  >
    <div class="wrapper">
      <!-- Preloader -->
      <div
        class="preloader flex-column justify-content-center align-items-center"
      >
        <img
          class="animation__wobble"
          src="images/djezzy-logo.png"
          alt="Djezzy Logo"
          height="100"
          width="100"
        />
      </div>

      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"
              ><i style="color: rgb(226, 6, 19)" class="fas fa-bars"></i
            ></a>
          </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
              <i
                style="color: rgb(226, 6, 19)"
                class="fas fa-expand-arrows-alt"
              ></i>
            </a>
          </li>
          <!-- <li class="nav-item">
            <a
              class="nav-link"
              data-widget="control-sidebar"
              data-slide="true"
              href="#"
              role="button"
            >
              <i style="color: rgb(226, 6, 19)" class="fas fa-th-large"></i>
            </a>
          </li> -->
        </ul>
      </nav>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-primary elevation-4">
        <!-- Brand Logo -->
        <a href="/" class="brand-link">
          <img
            src="images/djezzy-logo.png"
            alt="Djezzy Logo"
            class="brand-image"
          />
          <span style="color: rgb(226, 6, 19)" class="brand-text">Djezzy</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
          <!-- Sidebar user -->
          <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
              <img src="../../images/person-circle-outline.svg" />
            </div>
            <div class="info">
              <a
                href="/profile"
                style="color: initial; transition: color 0.3s"
                onmouseover="this.style.color='rgb(226, 6, 19)'"
                onmouseout="this.style.color='initial'"
                class="d-block"
                ><%= session.user.full_name %></a
              >
            </div>
          </div>
          <!-- Sidebar Menu -->
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
              data-accordion="false"
            >
              <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
              <li class="nav-item">
                <a
                  href="/"
                  class="nav-link active"
                  style="background-color: rgb(226, 6, 19)"
                >
                  <i class="nav-icon fas fa-chart-pie"></i>
                  <p>Dashboard</p>
                </a>
              </li>

              <% if (session.user.role === "admin") { %>
              <li class="nav-item">
                <a
                  href="/prediction"
                  class="nav-link"
                  style="color: initial; transition: color 0.3s"
                  onmouseover="this.style.color='rgb(226, 6, 19)'"
                  onmouseout="this.style.color='initial'"
                >
                  <i class="nav-icon fas fa-book"></i>
                  <p>Prédiction d'Offres</p>
                </a>
              </li>

              <li class="nav-item">
                <a
                  href="#"
                  class="nav-link"
                  style="color: initial; transition: color 0.3s"
                  onmouseover="this.style.color='rgb(226, 6, 19)'"
                  onmouseout="this.style.color='initial'"
                >
                  <i class="nav-icon fas fa-users-cog"></i>
                  <p>
                    Gestion des utilisateurs
                    <i class="fas fa-angle-left right"></i>
                  </p>
                </a>
                <ul class="nav nav-treeview" style="margin-left: 15px">
                  <li class="nav-item">
                    <a
                      href="/register"
                      class="nav-link"
                      style="color: initial; transition: color 0.3s"
                      onmouseover="this.style.color='rgb(226, 6, 19)'"
                      onmouseout="this.style.color='initial'"
                    >
                      <i
                        class="fas fa-user-plus nav-icon"
                        style="font-size: 0.9em"
                      ></i>
                      <p>Ajouter un utilisateur</p>
                    </a>
                  </li>

                  <li class="nav-item">
                    <a
                      href="/users"
                      class="nav-link"
                      style="color: initial; transition: color 0.3s"
                      onmouseover="this.style.color='rgb(226, 6, 19)'"
                      onmouseout="this.style.color='initial'"
                    >
                      <i
                        class="fas fa-users nav-icon"
                        style="font-size: 0.9em"
                      ></i>
                      <p>Afficher les utilisateurs</p>
                    </a>
                  </li>
                </ul>
              </li>
              <% } %>

              <li class="nav-item">
                <a
                  href="/logout"
                  class="nav-link"
                  style="color: initial; transition: color 0.3s"
                  onmouseover="this.style.color='rgb(226, 6, 19)'"
                  onmouseout="this.style.color='initial'"
                >
                  <i class="fas fa-sign-out-alt nav-icon"></i>
                  <p>Se déconncter</p>
                </a>
              </li>
            </ul>
          </nav>
          <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
              </div>
              <!-- /.col -->
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item">
                    <a style="color: rgb(226, 6, 19)" href="/">Home</a>
                  </li>
                  <li class="breadcrumb-item active">Dashboard</li>
                </ol>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <!-- Info boxes -->
            <div class="row justify-content-center">
              <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                  <!-- <span class="info-box-icon bg-info elevation-1">
                    <i class="fas fa-mobile-alt"></i>
                  </span> -->

                  <div class="info-box-content">
                    <span
                      style="color: #4169e1"
                      class="info-box-text text-center"
                    >
                      Nombre D'Appels Vers Djezzy
                    </span>
                    <span class="info-box-number text-center"> 753 </span>
                  </div>
                  <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
              </div>
              <!-- /.col -->
              <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                  <!-- <span class="info-box-icon bg-danger elevation-1">
                    <i class="fas fa-thumbs-up"></i>
                  </span> -->

                  <div
                    class="info-box-content text-center"
                    style="width: 200px"
                  >
                    <span style="color: #4169e1" class="info-box-text">
                      Nombre D'Appels Vers Ooredoo
                    </span>
                    <span class="info-box-number">14,723</span>
                  </div>

                  <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
              </div>
              <!-- /.col -->

              <!-- fix for small devices only -->
              <div class="clearfix hidden-md-up"></div>

              <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                  <!-- <span class="info-box-icon bg-success elevation-1">
                    <i class="fas fa-shopping-cart"></i>
                  </span> -->

                  <div class="info-box-content">
                    <span
                      style="color: #4169e1"
                      class="info-box-text text-center"
                    >
                      Nombre D'Appels Vers Mobilis
                    </span>
                    <span class="info-box-number text-center">22,086</span>
                  </div>
                  <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->

            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <h5 class="card-title">Analyse Générale</h5>

                    <div class="card-tools">
                      <button
                        type="button"
                        class="btn btn-tool"
                        data-card-widget="collapse"
                      >
                        <i class="fas fa-minus"></i>
                      </button>
                      <button
                        type="button"
                        class="btn btn-tool"
                        data-card-widget="remove"
                      >
                        <i class="fas fa-times"></i>
                      </button>
                    </div>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-12">
                        <p class="text-center">
                          <strong>Les 20 Paquets les Plus Utilisés</strong>
                        </p>

                        <div class="chart">
                          <!-- most used packages Chart Canvas -->
                          <canvas id="packagesChart"></canvas>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Main row -->
            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Analyse sur Les Paquets</h3>

                    <div class="card-tools">
                      <button
                        type="button"
                        class="btn btn-tool"
                        data-card-widget="collapse"
                      >
                        <i class="fas fa-minus"></i>
                      </button>
                      <button
                        type="button"
                        class="btn btn-tool"
                        data-card-widget="remove"
                      >
                        <i class="fas fa-times"></i>
                      </button>
                    </div>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                    <div class="row mb-4">
                      <div class="col-md-12">
                        <p class="text-center">
                          <!-- change title -->
                          <strong
                            >Les Paquets Internet les Plus Utilisés</strong
                          >
                        </p>
                        <div class="chart">
                          <!-- most used internet packages Chart Canvas -->
                          <canvas id="internetPackagesChart"></canvas>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-md-6 mb-4">
                        <p class="text-center">
                          <!-- change title -->
                          <strong
                            >Les Paquets Appels Vers Djezzy les Plus
                            Utilisés</strong
                          >
                        </p>
                        <div class="chart">
                          <!-- Most used calls for Djezzy packages Chart Canvas -->
                          <canvas
                            id="djezzyCallsPackagesChart"
                            style="width: 100%; height: 350px"
                          ></canvas>
                        </div>
                      </div>
                      <div class="col-md-6 mb-4">
                        <p class="text-center">
                          <!-- change title -->
                          <strong
                            >Les Paquets Appels Vers Ooredoo/Mobilis les Plus
                            Utilisés</strong
                          >
                        </p>
                        <div class="chart">
                          <!-- Most used calls for others packages Chart Canvas -->
                          <canvas
                            id="othersCallsPackagesChart"
                            style="width: 100%; height: 400px"
                          ></canvas>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- end card -->

                <!--  -->
                <div class="row">
                  <!-- Users Analysis Card -->
                  <div class="col-md-9">
                    <div class="card">
                      <div class="card-header">
                        <h3 class="card-title">Analyse sur Les Utilisateurs</h3>
                        <div class="card-tools">
                          <button
                            type="button"
                            class="btn btn-tool"
                            data-card-widget="collapse"
                          >
                            <i class="fas fa-minus"></i>
                          </button>
                          <button
                            type="button"
                            class="btn btn-tool"
                            data-card-widget="remove"
                          >
                            <i class="fas fa-times"></i>
                          </button>
                        </div>
                      </div>
                      <!-- /.card-header -->
                      <div class="card-body">
                        <div class="row">
                          <!-- First Chart -->
                          <div class="col-md-6">
                            <p class="text-center">
                              <strong
                                >Les 15 utilisateurs ayant la plus grande <br />
                                consommation de données</strong
                              >
                            </p>
                            <!-- Data Consumption Chart Canvas -->
                            <div class="chart d-flex justify-content-center align-items-center" style="max-height: 500px">
                              <!-- Data Consumption Chart Canvas -->
                              <canvas
                                id="dataConsumptionChart"
                                style="max-height: 500px"
                              ></canvas>
                            </div>
                          </div>
                          <!-- Second Chart -->
                          <div class="col-md-6">
                            <p class="text-center">
                              <strong
                                >Les 15 utilisateurs ayant la plus grande <br />
                                consommation d'appels</strong
                              >
                            </p>
                            <!-- Calls Consumption Chart Canvas -->
                            <div class="chart d-flex justify-content-center align-items-center" style="max-height: 500px">
                              <canvas
                                id="callsConsumptionChart"
                                style="max-height: 500px"
                              ></canvas>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Space for Info Boxes -->
                  <div
                    class="col-md-3 d-flex flex-column justify-content-between"
                  >
                    <!-- Info Boxes will be placed here -->
                    <div class="info-box mb-5" style="margin-top: auto;" >
                      <div class="info-box-content">
                        <span
                          style="color: #4169e1"
                          class="info-box-text text-center"
                          >Nombre Des Paquets Internet</span
                        >
                        <span class="info-box-number text-center">105,725</span>
                      </div>
                    </div>
                    <div class="info-box mb-5">
                      <div class="info-box-content">
                        <span
                          style="color: #4169e1"
                          class="info-box-text text-center"
                          >Nombre Des Paquets Appels</span
                        >
                        <span class="info-box-number text-center">38,050</span>
                      </div>
                    </div>
                    <div class="info-box mb-5">
                      <div class="info-box-content">
                        <span
                          style="color: #4169e1"
                          class="info-box-text text-center"
                          >Nombre Des Paquets SMS</span
                        >
                        <span class="info-box-number text-center">6,225</span>
                      </div>
                    </div>
                    <div class="info-box mb-5">
                      <div class="info-box-content">
                        <span
                          style="color: #4169e1"
                          class="info-box-text text-center"
                          >Nombre Totale Des Paquets</span
                        >
                        <span class="info-box-number text-center">150,000</span>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- end of the users card -->
              </div>
            </div>
          </div>
        </section>
      </div>

      <aside class="control-sidebar control-sidebar-dark"></aside>

      <!-- <footer class="main-footer"></footer> -->
    </div>

    <script>
      // Set the last visited page in localStorage
      localStorage.setItem("lastVisitedPage", window.location.href);
    </script>

    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="javascripts/adminlte.js"></script>

    <!-- PAGE PLUGINS -->
    <!-- jQuery Mapael -->
    <!-- <script src="plugins/jquery-mousewheel/jquery.mousewheel.js"></script>
    <script src="plugins/raphael/raphael.min.js"></script>
    <script src="plugins/jquery-mapael/jquery.mapael.min.js"></script>
    <script src="plugins/jquery-mapael/maps/usa_states.min.js"></script> -->
    <!-- ChartJS -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- <script src="chart.js/Chart.min.js"></script> -->

    <!-- <script src="dist/js/demo.js"></script> -->

    <script src="javascripts/pages/charts.js"></script>
  </body>
</html>
