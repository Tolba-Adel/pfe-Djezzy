<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="images/djezzy-logo.png" rel="icon" />
    <title>Prédiction d'offres</title>

    <!-- Google Font: Source Sans Pro -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback"
    />
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="fontawesome-free/css/all.min.css" />
    <!-- overlayScrollbars -->
    <link
      rel="stylesheet"
      href="overlayScrollbars/css/OverlayScrollbars.min.css"
    />
    <!-- Theme style -->
    <link rel="stylesheet" href="stylesheets/adminlte.min.css" />

    <!-- hover effects for buttons -->
    <style>
      .custom-btn {
        transition: transform 0.3s;
      }

      .custom-btn:hover {
        transform: scale(1.05);
      }
    </style>
  </head>
  <body
    class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed"
  >
    <!-- Site wrapper -->
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"
              ><i style="color: rgb(226, 6, 19)" class="fas fa-bars"></i
            ></a>
          </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
              <i
                style="color: rgb(226, 6, 19)"
                class="fas fa-expand-arrows-alt"
              ></i>
            </a>
          </li>
          <!-- <li class="nav-item">
            <a
              class="nav-link"
              data-widget="control-sidebar"
              data-slide="true"
              href="#"
              role="button"
            >
              <i style="color: rgb(226, 6, 19)" class="fas fa-th-large"></i>
            </a>
          </li> -->
        </ul>
      </nav>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-primary elevation-4">
        <!-- Brand Logo -->
        <a href="/" class="brand-link">
          <img
            src="images/djezzy-logo.png"
            alt="Djezzy Logo"
            class="brand-image"
          />
          <span style="color: rgb(226, 6, 19)" class="brand-text">Djezzy</span>
        </a>

        <div class="sidebar">
          <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
              <img src="../../images/person-circle-outline.svg" />
            </div>
            <div class="info">
              <a
                style="color: initial; transition: color 0.3s"
                onmouseover="this.style.color='rgb(226, 6, 19)'"
                onmouseout="this.style.color='initial'"
                href="/profile"
                class="d-block"
                ><%= session.user.full_name %></a
              >
            </div>
          </div>

          <!-- Sidebar Menu -->
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
              data-accordion="false"
            >
              <li class="nav-item">
                <a
                  href="/"
                  style="color: initial; transition: color 0.3s"
                  onmouseover="this.style.color='rgb(226, 6, 19)'"
                  onmouseout="this.style.color='initial'"
                  class="nav-link"
                >
                  <i class="nav-icon fas fa-chart-pie"></i>
                  <p>Dashboard</p>
                </a>
              </li>

              <li class="nav-item">
                <a
                  href="/prediction"
                  style="background-color: rgb(226, 6, 19)"
                  class="nav-link active"
                >
                  <i class="nav-icon fas fa-book"></i>
                  <p>Prédiction d'Offres</p>
                </a>
              </li>

              <li class="nav-item">
                <a
                  href="#"
                  class="nav-link"
                  style="color: initial; transition: color 0.3s"
                  onmouseover="this.style.color='rgb(226, 6, 19)'"
                  onmouseout="this.style.color='initial'"
                >
                  <i class="nav-icon fas fa-users-cog"></i>
                  <p>
                    Gestion des utilisateurs
                    <i class="fas fa-angle-left right"></i>
                  </p>
                </a>
                <ul class="nav nav-treeview" style="margin-left: 15px">
                  <li class="nav-item">
                    <a
                      href="/register"
                      class="nav-link"
                      style="color: initial; transition: color 0.3s"
                      onmouseover="this.style.color='rgb(226, 6, 19)'"
                      onmouseout="this.style.color='initial'"
                    >
                      <i
                        class="fas fa-user-plus nav-icon"
                        style="font-size: 0.9em"
                      ></i>
                      <p>Ajouter un utilisateur</p>
                    </a>
                  </li>

                  <li class="nav-item">
                    <a
                      href="/users"
                      class="nav-link"
                      style="color: initial; transition: color 0.3s"
                      onmouseover="this.style.color='rgb(226, 6, 19)'"
                      onmouseout="this.style.color='initial'"
                    >
                      <i
                        class="fas fa-users nav-icon"
                        style="font-size: 0.9em"
                      ></i>
                      <p>Afficher les utilisateurs</p>
                    </a>
                  </li>
                </ul>
              </li>

              <li class="nav-item">
                <a
                  href="/logout"
                  style="color: initial; transition: color 0.3s"
                  onmouseover="this.style.color='rgb(226, 6, 19)'"
                  onmouseout="this.style.color='initial'"
                  class="nav-link"
                >
                  <i class="fas fa-sign-out-alt nav-icon"></i>
                  <p>Se déconncter</p>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </aside>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Prédiction D'offres Téléphoniques</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item">
                    <a style="color: rgb(226, 6, 19)" href="/">Home</a>
                  </li>
                  <li class="breadcrumb-item active">Prédiction d'Offres</li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="col-md-7 offset-md-2">
            <div class="card card-danger">
              <div
                style="background-color: rgb(226, 6, 19)"
                class="card-header"
              >
                <h3 class="card-title">Formulaire</h3>

                <div class="card-tools">
                  <button
                    type="button"
                    class="btn btn-tool"
                    data-card-widget="collapse"
                    title="Collapse"
                  >
                    <i class="fas fa-minus"></i>
                  </button>
                </div>
              </div>
              <div class="card-body">
                <div class="form-group mb-4 mt-3">
                  <label for="inputPhoneNumber">Numéro de téléphone</label>
                  <input
                    type="number"
                    id="inputPhoneNumber"
                    min="770000000"
                    max="799999999"
                    class="form-control"
                  />
                </div>
                <div style="display: none" class="form-group">
                  <label for="inputOffre">Offre</label>
                  <input type="text" id="inputOffre" class="form-control" />
                </div>
                <div class="row">
                  <div class="col-12 mb-2">
                    <input
                      type="submit"
                      value="Prédire Offre"
                      class="btn btn-danger custom-btn float-right"
                      style="background-color: rgb(226, 6, 19)"
                    />
                  </div>
                </div>
              </div>

              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </section>
      </div>

      <!-- <footer class="main-footer"></footer> -->

      <aside class="control-sidebar control-sidebar-dark"></aside>
    </div>

    <script>
      // Set the last visited page in localStorage
      localStorage.setItem("lastVisitedPage", window.location.href);
    </script>

    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="javascripts/adminlte.js"></script>
  </body>
</html>
