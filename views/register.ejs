<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="images/djezzy-logo.png" />
    <title>Inscription</title>
    <link rel="stylesheet" href="stylesheets/style.css" />

    <!-- Google Font: Source Sans Pro -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback"
    />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="fontawesome-free/css/all.min.css" />
    <!-- icheck bootstrap -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Theme style -->
    <link rel="stylesheet" href="stylesheets/adminlte.min.css" />

    <!-- hover effects for buttons -->
    <style>
      .custom-btn {
        transition: transform 0.3s;
      }

      .custom-btn:hover {
        transform: scale(1.05);
      }
    </style>
  </head>
  <body class="hold-transition register-page">
    <div class="register-box card card-outline card-danger">
      <div class="card-header text-center">
        <a class="h1" style="color: initial"><b>Djezzy</b></a>
      </div>

      <div class="card">
        <div class="card-body register-card-body">
          <p style="color: rgb(226, 6, 19)" class="login-box-msg">
            <b>Créer Un Compte</b>
          </p>

          <form action="/register" method="post">
            <div class="input-group mb-3">
              <select name="role" class="form-control">
                <% roles.forEach(role => { %>
                  <option value="<%= role.role_name.toLowerCase() %>" <%= role.role_name.toLowerCase() === 'user' ? 'selected' : '' %>>
                    <%= role.role_name %>
                  </option>                 
                <% }); %>
              </select>
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-user-shield"></span>
                </div>
              </div>
            </div>

            <div class="input-group mb-3">
              <input
                name="full_name"
                type="text"
                class="form-control"
                placeholder="Nom et prénom"
                value="<%= full_name ? full_name : '' %>"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-user"></span>
                </div>
              </div>
            </div>

            <div class="input-group mb-3">
              <input
                name="poste"
                type="text"
                class="form-control"
                placeholder="Poste"
                value="<%= poste ? poste : '' %>"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-briefcase"></span>
                </div>
              </div>
            </div>

            <div class="input-group mb-3">
              <input
                name="email"
                type="email"
                class="form-control"
                placeholder="Email"
                value="<%= email ? email : '' %>"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-envelope"></span>
                </div>
              </div>
            </div>

            <div class="input-group mb-3">
              <input
                name="password"
                type="password"
                class="form-control"
                placeholder="Mot de Passe"
                value="<%= password ? password : '' %>"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>

            <div class="input-group mb-3">
              <input
                name="password_confirmed"
                type="password"
                class="form-control"
                placeholder="Confirmation Mot de Passe"
                value="<%= password_confirmed ? password_confirmed : '' %>"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>

            <% if (message) { %>
            <div class="error-message">
              <p><%= message %></p>
            </div>
            <% } %>

            <div class="row">
              <div class="col-8"></div>

              <div class="col-4">
                <button
                  style="background-color: rgb(226, 6, 19)"
                  type="submit"
                  class="btn btn-danger btn-block custom-btn"
                >
                  Register
                </button>
              </div>
            </div>
          </form>

          <a href="#" onclick="goBack()">
            <span
              style="color: initial; transition: color 0.3s; font-size: larger"
              onmouseover="this.style.color='rgb(226, 6, 19)'"
              onmouseout="this.style.color='initial'"
              class="fas fa-arrow-circle-left"
            ></span>
          </a>
        </div>
      </div>
    </div>

    <script>
      function goBack() {
        //retreive the last visited page from localStorage
        const lastVisitedPage = localStorage.getItem("lastVisitedPage");
        window.location.href = lastVisitedPage;
      }
    </script>

    <!-- jQuery -->
    <script src="jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="javascripts/adminlte.min.js"></script>
  </body>
</html>
