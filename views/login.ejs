<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="images/djezzy-logo.png" />
    <title>Log in</title>
    <link rel="stylesheet" href="stylesheets/style.css" />

    <!-- Google Font: Source Sans Pro -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback"
    />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="fontawesome-free/css/all.min.css" />
    <!-- icheck bootstrap -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Theme style -->
    <link rel="stylesheet" href="/stylesheets/adminlte.min.css" />

    <!-- hover effects for buttons -->
    <style>
      .custom-btn {
        transition: transform 0.3s;
      }

      .custom-btn:hover {
        transform: scale(1.05);
      }
    </style>

    <!-- <style>
      .icheck-danger input[type="checkbox"]:checked + label:before {
        background-color: rgb(226, 6, 19);
      }
    </style> -->
  </head>
  <body class="hold-transition login-page">
    <div class="login-box">
      <!-- /.login-logo -->
      <div class="card card-outline card-danger">
        <div class="card-header text-center">
          <a class="h1" style="color: initial"><b>Djezzy</b></a>
        </div>
        <div class="card-body">
          <p style="color: rgb(226, 6, 19)" class="login-box-msg">
            <b>Se Connecter</b>
          </p>

          <form action="/login" method="post">
            <div class="input-group mb-3">
              <input
                name="username"
                type="text"
                class="form-control"
                placeholder="Nom d'utilisateur"
                value="<%= username ? username : '' %>"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-user"></span>
                </div>
              </div>
            </div>

            <div class="input-group mb-3">
              <input
                name="password"
                type="password"
                class="form-control"
                placeholder="Mot de Passe"
                value="<%= password ? password : '' %>"
              />
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>

            <% if (message) { %>
            <div class="error-message">
              <p><%= message %></p>
            </div>
            <% } %>

            <div class="row">
              <div class="col-8"></div>
              <div class="col-4">
                <button
                  type="submit"
                  class="btn btn-danger btn-block custom-btn"
                  style="background-color: rgb(226, 6, 19)"
                >
                  Login
                </button>
              </div>

              <!-- /.col -->
            </div>
          </form>

          <div class="social-auth-links text-center mt-2 mb-3"></div>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
    <!-- /.login-box -->

    <!-- jQuery -->
    <script src="jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="javascripts/adminlte.min.js"></script>
  </body>
</html>
